{
  "name": "@cakaybox/root",
  "description": "家計簿管理アプリ「cakaybox」",
  "private": true,
  "scripts": {
    "prepare": "pnpm run compile",
    "compile": "tsc -b tsconfig.build.json",
    "dev:api": "pnpm --filter @cakaybox/backend run start:dev",
    "seed": "pnpm --filter @cakaybox/backend run seed",
    "build:api": "pnpm --filter @cakaybox/backend run build",
    "start:prod:api": "pnpm --filter @cakaybox/backend run start:prod",
    "dev:app": "pnpm --filter @cakaybox/frontend run dev",
    "build:app": "pnpm --filter @cakaybox/frontend run build",
    "preview:app": "pnpm --filter @cakaybox/frontend run preview",
    "sample": "node sample.js"
  },
  "dependencies": {
    "@ts-rest/core": "^3.33.0",
    "nuxt": "^4.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@vueuse/core": "^13.9.0",
    "@vueuse/nuxt": "^13.9.0",
    "typescript": "latest"
  }
}
